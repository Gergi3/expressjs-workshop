<h1>{{cube.name}}</h1>
<img class="cube" src="{{cube.imageUrl}}" alt="cubeImg">
<div class="details">
    <p><span>Description:</span>{{cube.description}}</p>
    <p><span>Difficulty level:</span> {{cube.difficultyLevel}}</p>
    <center>
        <a class="btn" href="/">Back</a>
        <a class="btn" href="/cube/attach-accessory/{{cube._id}}">Attach Accessory</a>
        <a class="btn" href="/cube/edit/{{cube._id}}">Edit</a>
        <a class="btn" href="/cube/delete/{{cube._id}}">Delete</a>
    </center>
</div>

<h2>Accessories</h2>
<div class="accessories">
    {{#each cube.accessories}}
        <div class="accessory">
            <img src="{{imageUrl}}" alt="stickerName">
            <h3>{{name}}</h3>
            <p>{{description}}</p>
        </div>
    {{/each}}
    {{#unless hasAccessories}}
        <h3 class="italic">This cube has no accessories yet...</h3>
    {{/unless}}
</div>